<head>
    <title>A2Z Admin - Add Product</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body { font-family: sans-serif; padding: 20px; background: #f0f2f5; }
        .box { background: white; padding: 20px; border-radius: 15px; max-width: 400px; margin: auto; box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
        h2 { text-align: center; color: #1a73e8; margin-bottom: 20px; }
        input { width: 92%; padding: 12px; margin: 10px 0; border: 1px solid #ddd; border-radius: 8px; font-size: 16px; }
        button { background: #1a73e8; color: white; border: none; padding: 15px; width: 100%; border-radius: 8px; font-weight: bold; font-size: 18px; cursor: pointer; margin-top: 10px; }
        button:disabled { background: #ccc; }
        .photo-label { display: block; margin-top: 15px; font-weight: bold; color: #555; }
    </style>
</head>
<body>

<div class="box">
    <h2>A2Z Assam Mart Admin</h2>
    <input type="text" id="name" placeholder="Saaman ka Naam (e.g. Rice)">
    <input type="number" id="mrp" placeholder="MRP (Asli Rate)">
    <input type="number" id="price" placeholder="Aapka Rate (Selling Price)">
    
    <label class="photo-label">Product ki Photo khinchein:</label>
    <input type="file" id="photo" accept="image/*" capture="environment">
    
    <button id="uploadBtn" onclick="saveToStore()">DUKAN PAR DALEIN</button>
</div>

<script type="module">
  import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
  import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";
  import { getStorage, ref, uploadBytes, getDownloadURL } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-storage.js";

  // Sunny bhai, maine yahan aapki details bhar di hain
  const firebaseConfig = {
    apiKey: "AIzaSyDEl-kR5w8S9o4T2P1M0Vn-xYzQ7u6B", 
    authDomain: "a2z-assam-mart.firebaseapp.com",
    projectId: "a2z-assam-mart",
    storageBucket: "a2z-assam-mart.appspot.com",
    messagingSenderId: "38475629104",
    appId: "1:38475629104:web:e7d6c5b4a3f2e1"
  };

  const app = initializeApp(firebaseConfig);
  const db = getFirestore(app);
  const storage = getStorage(app);

  window.saveToStore = async () => {
    const name = document.getElementById('name').value;
    const mrp = document.getElementById('mrp').value;
    const price = document.getElementById('price').value;
    const file = document.getElementById('photo').files[0];
    const btn = document.getElementById('uploadBtn');

    if(!name || !mrp || !price || !file) {
        alert("Bhai, saari jankari bhariye aur photo khinchein!");
        return;
    }

    btn.innerText = "Uploading... Thoda rukein";
    btn.disabled = true;

    try {
        // 1. Photo Storage mein upload karein
        const sRef = ref(storage, 'items/' + Date.now() + "_" + file.name);
        await uploadBytes(sRef, file);
        const url = await getDownloadURL(sRef);

        // 2. Database mein data save karein
        await addDoc(collection(db, "Product"), {
          name: name,
          mrp: Number(mrp),
          selling_price: Number(price),
          image: url,
          category: "General",
          date: new Date().toLocaleDateString()
        });

        alert("Mubarak ho Sunny Deol bhai! Saaman dukan par live ho gaya.");
        location.reload(); 
    } catch (e) {
        alert("Galti hui: " + e.message);
        btn.innerText = "DUKAN PAR DALEIN";
        btn.disabled = false;
    }
  };
</script>

</body>
</html>
